@inject IHtmlLocalizer<ProgettoHMI.web.SharedResource> SharedLocalizer
@inject Microsoft.Extensions.Options.IOptions<AppSettings> appSettings
@{
    Layout = "_LayoutHtml";
    var version = System.Reflection.Assembly.GetAssembly(typeof(Startup)).GetName().Version;

    var identitaCorrente = (ProgettoHMI.web.Areas.IdentitaViewModel)ViewData[ProgettoHMI.web.Areas.IdentitaViewModel.VIEWDATA_IDENTITACORRENTE_KEY];
}
@section metas{
    @RenderSection("metas", false)
}
@section styles {
    @RenderSection("styles", false)
}
<div id="pageId" class="bg-primary">
    @if (ViewData["ShowHeader"] as bool? ?? true) {
        <nav class="navbar navbar-light bg-dark">
            <div class="container-fluid">
                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#staticBackdrop" aria-controls="staticBackdrop">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <h1 class="text-white">LOGO</h1>
                <a href="#" class="btn btn-primary">Registrati</a>
            </div>
        </nav>
        @RenderSection("pageTitle", false)
    }
    <div class="offcanvas offcanvas-start" data-bs-backdrop="static" tabindex="-1" id="staticBackdrop" aria-labelledby="staticBackdropLabel" style="width:60% !important;">
        <div class="offcanvas-header">
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <div class="text-center">
                <a href="@Url.Action(MVC.Home.Home())" class="nav-link mb-1">Home</a>
                <hr />
                <a href="#" class="nav-link mb-1">Live</a>
                <hr />
                <a href="#" class="nav-link mb-1">Tornei</a>
                <hr />
                <a href="#" class="nav-link mb-1">Gradi</a>
                <hr class="mb-5" />
                <a href="#" class="btn btn-primary d-block mb-3">Registrati</a>
                <a href="@Url.Action(MVC.Login.Login())" class="btn btn-outline-primary d-block">Accedi</a>
            </div>
        </div>
    </div>
    @RenderSection("pageSubtitle", false)
    @RenderBody()
    <footer>
        <p>Footer Copyright</p>
    </footer>
</div>
