@model ProgettoHMI.web.Features.Register.RegisterViewModel
@{
    ViewData["Title"] = "Registrati";
    ViewData["isNotRegister"] = false;
}

<div class="bg-primary pb-5 pt-3">

    <p class="text-dark fw-bold fs-4 text-center mb-2 disabled" v-bind:class="selectSection == 1 ? 'd-block' : 'd-none'">Iscriviti per affrontare nuove sfide<br /> e ottenere numerosi premi</p>

    <div class="container-fluid"> <!-- centrare -->
        <div class="p-4 rounded mt-5" v-bind:style="{backgroundColor: selectSection == 3 ? '#729D9D' : '#E1E1E1'}">

            <form method="post" enctype="multipart/form-data">
                <!-- Prima sezione -->
                <div v-bind:class="selectSection == 1 ? 'd-block' : 'd-none'">
                    <label asp-for=Name class="form-label"></label>
                    <input asp-for="Name" class="form-control" type="text" required/>
                    <span asp-validation-for="Name" class="text-danger"> </span>
                    <div class="mb-3"></div>

                    <label asp-for=Surname class="form-label"></label>
                    <input asp-for="Surname" class="form-control" type="text" required />
                    <span asp-validation-for="Surname" class="text-danger"> </span>
                    <div class="mb-3"></div>

                    <label asp-for=Email class="form-label"></label>
                    <input asp-for="Email" class="form-control" type="text" required />
                    <span asp-validation-for="Email" class="text-danger"> </span>
                    <div class="mb-3"></div>

                    <label asp-for=Password class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"> </span>
                    <div class="mb-3"></div>
                </div>

                <!-- Seconda sezione -->
                <div v-bind:class="selectSection == 2 ? 'd-block' : 'd-none'">
                    <label for="telefono" class="form-label">Telefono*</label>
                    <input type="tel" id="telefono" name="Telefono" class="form-control mb-3"  required>

                    <label for="codiceFiscale" class="form-label">Codice Fiscale (facoltativo)</label>
                    <input type="text" id="codiceFiscale" name="CodiceFiscale" class="form-control mb-3" required>

                    <label for="indirizzo" class="form-label">Indirizzo (facoltativo)</label>
                    <input type="text" id="indirizzo" name="Indirizzo" class="form-control mb-3" required>

                    <label for="nazionalita" class="form-label">Nazionalità (facoltativo)</label>
                    <input type="text" id="nazionalita" name="Nazionalita" class="form-control mb-3" required>

                    <label for="imgProfilo" class="form-label">Immagine Profilo (facoltativo)</label>
                    <input type="file" id="imgProfilo" name="ImgProfilo" class="form-control mb-3" accept="image/*" required>
                </div>

                <!-- Terza sezione -->
                <div v-bind:class="selectSection == 3 ? 'd-block' : 'd-none'">
                    <h2 class="text-center mb-3">Scegli il tuo livello</h2>
                    <div>
                        <div class="bg-secondary row align-items-center mb-2 p-3 rounded-4" v-bind:class="selectRank == 1 ? 'selected-register' : ''">
                            <div class="col-auto">
                                <img src="~/images/diamond.svg" alt="Diamante">
                            </div>
                            <div class="col">
                                <h5>Diamante</h5>
                                <p class="fs-p-register">Giocatore esperto, capace di sferrare vincenti in ogni zona del campo.</p>
                            </div>
                            <div class="col-auto form-check">
                                <input class="form-check-input p-2" type="radio" name="level" value="diamante" v-on:click="selectRank = 1">
                            </div>
                        </div>

                        <div class="bg-secondary row align-items-center mb-2 p-3 rounded-4" v-bind:class="selectRank == 2 ? 'selected-register' : ''">
                            <div class="col-auto">
                                <img src="~/images/gold.svg" alt="Oro">
                            </div>
                            <div class="col">
                                <h5>Oro</h5>
                                <p class="fs-p-register">Giocatore che riesce a controllare i propri colpi, con un buon servizio.</p>
                            </div>
                            <div class="col-auto form-check">
                                <input class="form-check-input p-2" type="radio" name="level" value="oro" v-on:click="selectRank = 2">
                            </div>
                        </div>

                        <div class="bg-secondary row align-items-center mb-2 p-2 rounded-4" v-bind:class="selectRank == 3 ? 'selected-register' : ''">
                            <div class="col-auto">
                                <img src="~/images/silver.svg" alt="Argento">
                            </div>
                            <div class="col">
                                <h5>Argento</h5>
                                <p class="fs-p-register">Giocatore che è capace di sferrare bei solidi colpi, ma fatica a trovare continuità.</p>
                            </div>
                            <div class="col-auto form-check">
                                <input class="form-check-input p-2" type="radio" name="level" value="argento" v-on:click="selectRank = 3">
                            </div>
                        </div>

                        <div class="bg-secondary row align-items-center mb-2 p-3 rounded-4" v-bind:class="selectRank == 4 ? 'selected-register' : ''">
                            <div class="col-auto">
                                <img src="~/images/bronze.svg" alt="Bronzo">
                            </div>
                            <div class="col">
                                <h5>Bronzo</h5>
                                <p class="fs-p-register">Giocatore che ha appena superato le prime avversità.</p>
                            </div>
                            <div class="col-auto form-check">
                                <input class="form-check-input p-2" type="radio" name="level" value="bronzo" v-on:click="selectRank = 4">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <p id="progress" class="mb-0">{{ selectSection }} di 3</p>
                    <div>
                        <button type="button" id="prevBtn" class="btn btn-secondary me-2" v-on:click="selectSection = selectSection - 1" v-show="selectSection != 1">Indietro</button>
                        <button v-bind:type="selectSection == 3 ? 'submit' : 'button'" id="nextBtn" class="btn btn-primary" v-on:click="selectSection < 3 ? selectSection++ : null">{{ selectSection == 3 ? 'Invia' : 'Avanti' }}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/bundle-vue.js" asp-append-version="true"></script>

    <script type="text/javascript">
        new Vue({
            el: '#pageId',
            data: {
                selectSection: 1,
                selectRank: 0
            }
        });
    </script>
}
